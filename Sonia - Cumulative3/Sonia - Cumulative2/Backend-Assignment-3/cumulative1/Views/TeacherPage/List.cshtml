@model IEnumerable<Cumulative1.Models.Teacher>
<div style="background-color: maroon; padding: 1em 0;">
<h1>List of Teachers</h1>

@foreach (Cumulative1.Models.Teacher CurrentTeacher in Model)

 // I added styling. Attempt a previously un-attempted initiative from C1 or C2 (Make sure to
